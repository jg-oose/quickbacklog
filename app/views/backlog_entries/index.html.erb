<h1><%=t '.The_Backlog' %></h1>

<div class="btn-toolbar">
    <div class="btn-group">
        <%= link_to new_backlog_entry_path, :class => "btn btn-primary" do %>
                <i class="icon-plus-sign icon-white" ></i>
                <%=t '.new_entry' %>
        <% end %>
    </div>
    <div class="btn-group">
        <%= link_to t(".open"), backlog_entries_path(:d => "open"), :class => "btn #{@ui_btn_state[:open]}" %>
        <%= link_to t(".done"), backlog_entries_path(:d => "done"), :class => "btn #{@ui_btn_state[:done]}" %>
        <%= link_to t(".all"), backlog_entries_path(:d => "all"), :class => "btn #{@ui_btn_state[:all]}" %>
    </div>
    <div class="btn-group">
        <%= link_to backlog_entries_path, :class => "btn" do %>
                <i class="icon-refresh" ></i>
        <% end %>
    </div>
    <div class="btn-group">
        <%= link_to backlog_entries_path(format: 'pdf', cards: true), :class => "btn" do %>
                <i class="icon-th-large" ></i>
        <% end %>
        <%= link_to backlog_entries_path(format: 'pdf'), :class => "btn" do %>
                <i class="icon-print" ></i>
        <% end %>
    </div>
    <div class="btn-group">
        <button id="expand_all_btn" class="btn" data-toggle="button">
            <i class="icon-resize-vertical" ></i>
        </button>
    </div>
</div> 

<ul id="backlog_entries" data-update-url="<%= sort_backlog_entries_url %>">
    <%= render :partial => @backlog_entries %>
    <li id="waterline" style="display: none">
        <div class="row">
            <div class="span8">
            <div class="well">
                This is the waterline! Value: XXX!
            </div>
            </div>
        </div>
    </li>
</ul>

<%= content_for :sidebar do %>
    <h4>N&auml;chste Iteration</h4>
        <fieldset>
        <div class="control-group">
        <div class="controls">
        <div class="input-prepend">
            <span class="add-on">Vel.</span><%= text_field_tag :velocity, nil, class: 'span1',
                data: {scale: @size_scale } %>
        </div>
        </div>
        </div>
        </fieldset>
<% end %>
