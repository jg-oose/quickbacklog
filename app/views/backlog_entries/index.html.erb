<h1>The Backlog</h1>

<div class="btn-toolbar">
    <div class="btn-group">
        <%= link_to new_backlog_entry_path, :class => "btn btn-primary" do %>
                <i class="icon-plus-sign icon-white" ></i>
                Neuer Backlogeintrag
        <% end %>
    </div>
    <div class="btn-group">
        <%= link_to backlog_entries_path, :class => "btn" do %>
                <i class="icon-refresh" ></i>
        <% end %>
    </div>
    <div class="btn-group">
        <%= link_to backlog_entries_path(format: 'pdf', cards: true), :class => "btn" do %>
                <i class="icon-th-large" ></i>
        <% end %>
        <%= link_to backlog_entries_path(format: 'pdf'), :class => "btn" do %>
                <i class="icon-print" ></i>
        <% end %>
    </div>
</div> 

<ul id="backlog_entries" data-update-url="<%= sort_backlog_entries_url %>">
    <%= render :partial => @backlog_entries %>
</ul>
