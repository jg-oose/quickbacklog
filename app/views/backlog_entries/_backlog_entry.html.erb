<%= content_tag_for :li, backlog_entry do %>
<div class="row">
    <div class="entry_head span1">
        <h1><span class="hash">#</span><%= backlog_entry.id %></h1>
        <span class="size">&nbsp; <%= backlog_entry.size ? backlog_entry.size : "--" %></span>
    </div>
    <div class="entry_details span6">
        <h1><%= link_to backlog_entry.title, "#", data: {toggle: "collapse", target: "#backlog_entry_#{backlog_entry.id}  .description"} %></h1>
        <h2><%= link_to(icon_arrow_right + category_of(backlog_entry), "#")%></h2>
        <div class="description collapse in"><%= markdown backlog_entry.description %></div>
    </div>
    <div class="entry_actions span1">
          <%= link_to edit_backlog_entry_path(backlog_entry) do %><i class="icon-pencil"></i><% end %>
          <%= link_to backlog_entry_path(backlog_entry), :method => :delete, :confirm => t('.are_you_sure') do %><i class="icon-trash"></i><% end %>
          <span class="btn btn-mini"><%= best_in_place backlog_entry, :done, type: :checkbox, collection: [t(".done"), t(".reopen_html")] %></span>
    </div>
</div>
<% end %>
